<body>
  <h2>Locavore Kitchen App</h2>

  <h3>Edit recipe: </h3>
  <h4>Name: <%= @recipe.name %></h4>
  <h4>Ingredients:</h4>
  <% @recipe.ingredients.each do |ingredient|%>
    <%= ingredient.name%>
    <% if recipe.ingredients.length == 0 %>
        <p>Oops, doesn't look like you have any ingredients yet!</p>
    <% end %>
  <% end %>

  <br><br>

  <label>Update:</label>
  <form action="/recipes/<%= @recipe.id %>" method="post">
    <input type="hidden" id="hidden" name="_method" value="patch">

    <br><br>

    <label>Name: </label>
    <input type="text" id="new_recipe" name="recipe[name]" placeholder="Recipe Name:">

    <br><br>

    <label>Ingredient: </label>
    <input type="text" id="new_ingredient" name="ingredient[name]" placeholder="Ingredients:">

    <br><br>

    <input type="submit" value="update">
  </form>

  <p>Return to <a href="/show">account home</a></p>
</body>
