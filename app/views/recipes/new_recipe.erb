<body>
  <form action="/recipes" method ="POST">
    <label><b>Recipe name:</b></label>
    <input id="new_recipe" type="text" name="recipe[name]" placeholder="Recipe Name:">

    <br><br>


    <% if !@recipes.nil? %>
      <% @recipe.ingredients.each do |ingredient| %>
        <p>Choose existing ingredient: </p>
        <input type="checkbox" name="recipe[ingredient_ids][]" value="<%=ingredient.id%>" id="<%=ingredient.id%>"><%=ingredient.name%></input>
        <%='checked' if @recipe.ingredients.include?(ingredient)%>><%=ingredient.name%>
      <%end%>
    <%end%>

    <br></br>

    <label>Add new ingredient:</label>
    <input id="new_ingredient" type="text" name="ingredient[name]" placeholder="Ingredient:">

    <label>Add quantity:</label>
    <input id="new_quantity" type="text" name="recipe_ingredient[quantity]" placeholder="Quantity:">

    <br><br>
    <br></br>

    <label>Add Headline Tag:</label>
    <input id="new_content" type="text" name="recipe[content]" placeholder="Recipe Headline:">

    <br><br>
    <br><br>

    <label>Add Directions:</label>
    <input id="new_directions" type="text" name="recipe[directions]" placeholder="Directions:">

    <br><br>

    <input type="submit" value="submit">
  </form>

  <br><br>

  <p>Back to <a href="/recipes">Recipes</a></p>

</body>
