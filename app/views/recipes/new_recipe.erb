<body>
  <form action="/recipes" method ="POST">
    <label>Recipe name:</label>
    <input id="new_recipe" type="text" name="recipe[name]" placeholder="Recipe Name:">

    <br><br>

    <label>Add first ingredient:</label>
    <input id="new_ingredient" type="text" name="ingredient[name]" placeholder="Ingredient:">

    <label>Add quantity:</label>
    <input id="quantity" type="text" name="recipe_ingredient[quantity]" placeholder="Quantity:">

    <br><br>

    <label>Description:</label>
    <input id="content" type="text" name="recipe[content]" placeholder="Description:">

    <br><br>

    <input type="submit" value="submit">
  </form>
</body>
